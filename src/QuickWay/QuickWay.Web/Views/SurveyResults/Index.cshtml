@model SurveyStatisticViewModel
@{
    ViewData["Title"] = "Survey Statistics";
}

<h1>Survey Statistics</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Generate">
            <div>
                <label>Show average by: </label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" asp-for="AverageByLevel" value="true" id="level" class="custom-control-input">
                <label class="custom-control-label" asp-for="AverageByLevel" for="level">Level</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" asp-for="AverageByLevel" value="false" id="gender" class="custom-control-input">
                <label class="custom-control-label" asp-for="AverageByLevel" for="gender">Gender</label>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Display" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
@if (Model.AverageByLevel.HasValue)
{
    <div class="row">
        @if (Model.AverageByLevel == true)
        {
            @await Html.PartialAsync("/Views/SurveyResults/_AverageByLevelView.cshtml", Model.Data)
        }
        else
        {
            @await Html.PartialAsync("/Views/SurveyResults/_AverageByGenderView.cshtml", Model.Data)
        }
    </div>
}

